# Themathar Game Configuration

# Game Settings
GAME_TURN_DURATION=60
GAME_MODE=queue

# WordPress Settings
WP_SITE_URL=http://localhost
WP_API_URL=/wp-json/themathar/v1

# Database Settings (for manual setup)
DB_HOST=localhost
DB_NAME=wordpress_themathar
DB_USER=wordpress
DB_PASSWORD=wordpress_password

# Server Settings
SERVER_PORT=80
PHP_FPM_SOCKET=/run/php/php-fpm.sock

# WebAssembly Settings
WASM_OPTIMIZATION_LEVEL=z
WASM_LTO=thin
WASM_CODEGEN_UNITS=1

# Features
ENABLE_SPECTATOR_MODE=false
ENABLE_CHAT=false
ENABLE_STATISTICS=true
